local Players = game:GetService("Players")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "ShieldGUI"

-- Bot√£o na tela
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 160, 0, 40)
button.Position = UDim2.new(0, 20, 0.6, 0)
button.Text = "üõ°Ô∏è Prote√ß√£o: OFF"
button.BackgroundColor3 = Color3.fromRGB(255, 85, 85)
button.TextColor3 = Color3.new(1,1,1)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18
button.Parent = gui

-- Bola de prote√ß√£o vermelha
local shield = Instance.new("Part")
shield.Name = "ShieldBubble"
shield.Shape = Enum.PartType.Ball
shield.Size = Vector3.new(10, 10, 10) -- Tamanho da prote√ß√£o
shield.Transparency = 0.3 -- vis√≠vel, mas um pouco transparente
shield.Anchored = false
shield.CanCollide = false -- s√≥ ativa quando clicar
shield.Material = Enum.Material.ForceField
shield.Color = Color3.fromRGB(255, 0, 0) -- VERMELHO
shield.Parent = char
shield.Position = char:WaitForChild("HumanoidRootPart").Position

-- Solda com personagem
local weld = Instance.new("WeldConstraint")
weld.Part0 = char:WaitForChild("HumanoidRootPart")
weld.Part1 = shield
weld.Parent = shield

-- Controle de ativa√ß√£o
local active = false
button.MouseButton1Click:Connect(function()
	active = not active
	shield.CanCollide = active
	shield.Transparency = active and 0.3 or 1 -- vis√≠vel s√≥ quando ligado
	button.Text = active and "üõ°Ô∏è Prote√ß√£o: ON" or "üõ°Ô∏è Prote√ß√£o: OFF"
	button.BackgroundColor3 = active and Color3.fromRGB(85, 255, 85) or Color3.fromRGB(255, 85, 85)
end)

-- Atualiza caso o personagem respawnar
player.CharacterAdded:Connect(function(newChar)
	char = newChar
	local root = char:WaitForChild("HumanoidRootPart")
	shield.Parent = char
	weld.Part0 = root
	weld.Part1 = shield
end)
